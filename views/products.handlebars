  <div class="container">
    <div class="row">
      {{#each product}}
      <div class="col-4">
        <div class="card" style="width: 18rem; margin: 5px 0 5px 0;">
          <img src="{{img}}" class="card-img-top" alt="{{img}}">
          <div class="card-body">
            <p><span id="itemName"></span>Name: <span id='name2grab' >{{name}}</span></p>
            <p><span id="itemPrice"></span>Price: ${{price}}</p>
            <p><span id="quantity"></span>Quantity Available: {{quantity}}</p>
            <div class="quantity buttons_added">
              <input data-name={{name}} type="button" value="-" class="subtract-item">
              {{!-- <input type="number" step="1" min="1" max="" name="quantity"
                value="1" title="Qty" class="input-text qty text" size="4" pattern="" inputmode=""/> --}}
                <h1 id={{name}}>0</h1>
              <input data-name={{name}} type="button" value="+" class="add-item">
            <br>
            <button id="addToCart" data-item_price={{price}}>Add To Cart</button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}